        <Button
            android:id="@+id/button32"
            android:layout_width="80dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:text=":V"
            app:layout_column="0"
            app:layout_row="8" />
