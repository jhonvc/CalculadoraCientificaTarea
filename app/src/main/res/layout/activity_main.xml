            app:layout_row="8" />

        <Button
            android:id="@+id/btc"
            android:onClick="clear"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="C"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/bt9"
            android:layout_width="80dp"
