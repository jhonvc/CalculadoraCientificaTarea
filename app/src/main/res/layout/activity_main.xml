            app:layout_row="2" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:backgroundTint="@color/colorAzul"
            android:text="5"
            android:onClick="bt5"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:onClick="bt2"
            android:text="2"
            android:backgroundTint="@color/colorAzul"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/button13"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:onClick="btpunt"
            android:backgroundTint="@color/colorAzul"
            android:text="."
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/btcos"
            android:layout_width="80dp"
            android:onClick="cos"
            android:backgroundTint="@color/colorNegro"
            android:textColor="@color/colorBlanco"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Cos"
            app:layout_column="0"
            app:layout_row="6" />

        <Button
            android:id="@+id/btsec"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorNegro"
            android:layout_marginLeft="90dp"
            android:text="Sec"
            android:onClick="sec"
            android:textColor="@color/colorBlanco"
            app:layout_column="0"
            app:layout_row="7" />

        <Button
            android:id="@+id/btfact"
            android:layout_width="80dp"
